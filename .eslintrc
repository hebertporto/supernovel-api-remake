{
  "parser": "babel-eslint",
  "parserOptions": {
    "sourceType": "module"
  },
  "rules": {
    "no-underscore-dangle": [
      "error",
      {
        "allow": [
          "_id"
        ]
      }
    ],
    "semi": [
      "error",
      "never"
    ]
  },
  "plugins": [],
  "env": {
    "node": true,
    "mocha": true
  },
  "globals": {
    "userModel": true,
    "postModel": true,
    "categoryModel": true,
    "request": true,
    "expect": true
  },
  "extends": "airbnb"
}
